server {
    listen 80 default_server;
    listen [::]:80 default_server;

    index index.html index.htm index.php;
    root ${WEB_ROOT};

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
     }

    location ~ /\.ht {
        deny all;
    }

}